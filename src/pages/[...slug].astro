---
import BaseLayout from "@/layouts/BaseLayout.astro";

import Authors from "@/components/Authors.astro";
import Metadata from "@/components/Metadata.astro";
import PrevNext from "@/components/PrevNext.astro";
import { posts, prevnexts } from "@/utils/content";
import { formatDate } from "@/utils/date";
import { type CollectionEntry, render } from "astro:content";

export async function getStaticPaths() {
  return posts.map((post, i) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const prevnext = prevnexts[post.id];

const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description || ""}>
  <article>
    <Metadata post={post.data} />
    <h1>{post.data.title}</h1>
    <center><b><Authors authors={post.data.authors} /></b></center>
    <center>{formatDate(post.data.date, post.data["date-precision"])}</center>

    {
      Object.entries(prevnext).map(([name, pair]) => (
        <PrevNext prev={pair.prev?.id} name={name} next={pair.next?.id} />
      ))
    }

    <section>
      <Content />
    </section>
  </article>
</BaseLayout>
