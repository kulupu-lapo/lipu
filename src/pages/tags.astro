---
import SearchPage from "@/layouts/SearchPage.astro";
import { getPostsByTag, by, tags, escape } from "@/utils/content";

const query = tags
  .map((tag) => ({
    tag,
    posts: getPostsByTag(tag).length,
  }))
  .sort(by((x) => x.posts, false));
---

<SearchPage title="tags">
  <h2>Tags ({query.length})</h2>
  <ul>
    {
      query.map((row) => (
        <li>
          <a href={`./t/${escape(row.tag)}`}>{row.tag}</a>
          {` (${row.posts} posts)`}
        </li>
      ))
    }
  </ul>
</SearchPage>
