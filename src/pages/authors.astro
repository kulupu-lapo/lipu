---
import BaseLayout from "@/layouts/BaseLayout.astro";

import { authors, by, escape, getPostsByAuthor } from "@/utils/content";

const query = authors
  .map((author) => ({
    author,
    posts: getPostsByAuthor(author).length,
  }))
  .sort(by((x) => x.posts, false));
---

<BaseLayout title="authors">
  <h2>Authors ({query.length})</h2>
  <ul>
    {
      query.map((row) => (
        <li>
          <a href={`./a/${escape(row.author)}`}>{row.author}</a>
          {` (${row.posts} posts)`}
        </li>
      ))
    }
  </ul>
</BaseLayout>
