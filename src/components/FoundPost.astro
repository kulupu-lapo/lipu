---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@/utils/date";
type Props = CollectionEntry<"blog">;

const post = Astro.props;
---

<style>
  li {
    width: 100%;
    margin: 1.5rem 0;
    line-height: 1.3;
  }
  .date {
    color: var(--grey);
  }
  p {
    margin: 0;
  }
  .author {
    font-weight: initial;
  }
</style>
<li>
  <p>
    {
      post.data.authors?.map((author) => (
        <a class="author" href={`./a/${author.replaceAll(/[/ ]/g, "_")}`}>
          {author}{" "}
        </a>
      ))
    }
    <span class="date"
      >{formatDate(post.data.date, post.data["date-precision"])}</span
    >
  </p>
  <a href={`./${post.id}/`}>{post.data.title}</a>
</li>
