---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@/utils/date";
import Authors from "@/components/Authors.astro";

interface Props {
  post: CollectionEntry<"blog">;
  query?: string;
}

const { post, query = "" } = Astro.props;
---

<style>
  li {
    width: 100%;
    margin: 1.5rem 0;
    line-height: 1.3;
  }
  .date {
    color: var(--grey);
  }
  p {
    margin: 0;
  }
</style>
<li>
  <p>
    <Authors authors={post.data.authors} />
    <span class="date"
      >{formatDate(post.data.date, post.data["date-precision"])}</span
    >
  </p>
  <a href={`./${post.id}/${query ? `?q=${query}` : ""}`}>{post.data.title}</a>
</li>
