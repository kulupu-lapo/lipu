---
import type { CollectionEntry } from "astro:content";
type Props = CollectionEntry<"blog">;

const post = Astro.props;
---

<style>
  li {
    width: 100%;
    margin: 1.5rem 0;
    line-height: 1.3;
  }
  .date {
    color: var(--grey);
  }
  p {
    margin: 0;
  }
</style>
<li>
  <p>
    {post.data.authors?.join(", ")} Â·{" "}
    <span class="date">{post.data.date.toDateString()}</span>
  </p>
  <a href={`./${post.id}/`}>{post.data.title}</a>
</li>
