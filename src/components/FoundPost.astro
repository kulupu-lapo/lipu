---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "@/utils/date";
import Authors from "@/components/Authors.astro";

interface Props {
  post: CollectionEntry<"blog">;
  query?: string;
}

const { post, query = "" } = Astro.props;

import { urlLocaliser } from "@/utils/i18n.ts"
const localUrl = urlLocaliser(Astro.url)
---

<style>
  li {
    width: 100%;
    margin: 1.5rem 0;
    line-height: 1.3;
  }
  li::marker {
    color: var(--accent);
  }
  .date {
    color: var(--grey);
  }
  .post {
    text-decoration: none;
    font-style: italic;
  }
  p {
    margin: 0;
  }
</style>
<li>
  <a href={localUrl(`/${post.id}/${query ? `?q=${query}` : ""}`)} class="post">{post.data.title}</a>
  <p>
    by <Authors authors={post.data.authors} />,
    <span class="date">{formatDate(post.data.date, post.data["date-precision"])}</span>
  </p>
</li>
