---
interface Props {
  title: string,
  value: number,
  link: string
}

const { title, value, link } = Astro.props;


---

<style>
  div {
    width: 200px;
    display: inline-block;
    margin: 0.5rem 0.25rem;
    text-align: center;
    border: 1px solid var(--grey);
    padding: var(--block-padding);
    border-radius: var(--block-border-radius);
    box-sizing: border-box;
    box-shadow: 0px 0px 0px transparent;
    transition-duration: 0.3s;
    transition-property: box-shadow;
  }
  div:hover {
    border-color: var(--accent);
    box-shadow: 0px 0px 8px var(--accent);
  }
  small {
    font-size: inherit;
  }
  p {
    font-size: 48px;
    margin: 0;
    color: var(--accent);
    font-weight: 700;
  }
  a {
    color: var(--txt);
    font-weight: initial;
  }
</style>

<a href={link}><div class={link}>
  <small>{title}</small>
  <p>{value}</p>
</div></a>
