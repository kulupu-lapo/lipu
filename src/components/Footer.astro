---
import { translator, getLangFromUrl } from "@/utils/i18n";
import { data } from "@/i18n/info";
const t = translator(data, getLangFromUrl(Astro.url))
---
<style>
  footer {
    max-width: 850px;
    text-align: center;
    border-top: 5px dotted var(--accent);
    padding: 20px 0;
    margin: auto;
    margin-bottom: 2rem;
    color: var(--grey);
  }
  a {
    display: inline-block;
    text-decoration: auto;
    font-weight: initial;
  }
</style>

<footer set:html={t('footer')} />
